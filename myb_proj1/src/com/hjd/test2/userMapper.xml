<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.hjd.test2.userMapper"> 
	<!-- 增删改查操作 -->
	<insert id="addUser" parameterType="com.hjd.test.User">
		insert into users(name, age) values(#{name}, #{age}) 
	</insert>
	<delete id="deleteUser" parameterType="int">
		delete from users where id = #{id}
	</delete>
	<update id="updateUser" parameterType="com.hjd.test.User">
		update users set name = #{name}, age = #{age} where id = #{id}
	</update>
	<select id="getUser1" parameterType="int" resultType="com.hjd.test.User">
		select * from users where id = #{id}
	</select>
	<select id="getAllUser"  resultType="com.hjd.test.User">
		select * from users
	</select>
</mapper>